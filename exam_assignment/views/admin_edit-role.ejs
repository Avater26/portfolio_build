<%- include('partials/admin_head') %> <%- include('partials/admin_header') %>
<main role="main">
  <%- include('partials/admin_nav') %>

  <section>
    <form method="post" enctype="multipart/form-data">
      <span style="color: red;"
        ><%= typeof messages != 'undefined' && typeof messages.error !=
        'undefined' ? messages.error : '' %></span
      >
      <span style="color: green;"
        ><%= typeof messages != 'undefined' && typeof messages.info !=
        'undefined' ? messages.info : '' %></span
      >

      <fieldset>
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="<%= roles.name %>" />
      </fieldset>
      <fieldset>
        <label for="level">Level</label>
        <input
          type="number"
          name="level"
          id="level"
          value="<%= roles.level %>"
        />
      </fieldset>
      <button type="submit">Update</button>
    </form>
  </section>
</main>
<%- include('partials/admin_footer') %>
